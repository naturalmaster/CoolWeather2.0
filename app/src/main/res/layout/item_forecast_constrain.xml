<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_forecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.089" />

    <TextView
        android:id="@+id/item_forecast_tmp_min"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_forecast_date"
        app:layout_constraintLeft_toRightOf="@+id/item_forecast_info"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/item_forecast_tmp_max"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginBottom="-1dp"
        android:layout_marginLeft="5dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/item_forecast_tmp_min"
        app:layout_constraintLeft_toRightOf="@+id/textView6" />

    <TextView
        android:id="@+id/item_forecast_rain_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_forecast_date"
        app:layout_constraintLeft_toRightOf="@+id/item_forecast_tmp_max"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~"
        app:layout_constraintLeft_toRightOf="@+id/item_forecast_tmp_min"
        android:layout_marginLeft="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_forecast_tmp_min" />

    <TextView
        android:id="@+id/item_forecast_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_forecast_date"
        app:layout_constraintLeft_toRightOf="@+id/item_forecast_date" />
</android.support.constraint.ConstraintLayout>